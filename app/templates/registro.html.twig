{% extends 'base.html.twig' %}

{% block title %}Alta de usuarios{% endblock %}

{% block body %}
<h1 class="h3 mb-3 font-weight-normal" style="margin-top: 80px; margin-left:40px">Alta de usuarios</h1>
<form action="{{ path('registrocomplete') }}" method="post" style="margin-top:40px;">      
      <div id="campForm">
          <label for="inputUsername">Nombre:</label>
          <input type="text" name="username" id="inputUsername1" class="form-control" autocomplete="username" required>
          <div id="requiredCamp"><div id="requiredCampName"></div></div>
      </div>
      <div id="campForm">
        <label for="inputSurname">Apellidos:</label>
        <input type="text" name="surname" id="inputSurname" class="form-control" autocomplete="surname">
      </div>
      <div id="campForm">
        <label for="inputPassword">Contrase√±a:</label>
        <input type="password" name="password" id="inputPassword1" class="form-control" autocomplete="password" required>
        <div id="requiredCamp"><div id="requiredCampPassword"></div></div>
      </div>
      <div id="campForm">
          <label for="inputUsername">Edad:</label>
          <input type="text" name="age" id="inputAge1" class="form-control" autocomplete="age" required>
          <div id="requiredCamp"><div id="requiredCampAge"></div></div>
      </div> 
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

   <div id="botones">
     <button id="boton" class="btn btn-lg btn-primary" type="submit" onClick="valida();">Nuevo</button>
   </div>
</form>
{% endblock %}
