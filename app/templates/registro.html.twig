{% extends 'base.html.twig' %}

{% block title %}Alta de usuarios{% endblock %}

{% block body %}
<form action="{{ path('registro') }}" method="post">

    <h1 class="h3 mb-3 font-weight-normal">Alta de usuarios</h1>
    <div>
        <label for="inputUsername">Nombre:</label>
        <input type="text" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
    </div>

    <div>
        <label for="inputPassword">Contrase√±a</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
 {{include('security/buttons.html.twig', {'button_label':'Nuevo'})}}

</form>
{% endblock %}
