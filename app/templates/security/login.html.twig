{% extends 'base.html.twig' %}

{% block title %}Login de usuarios{% endblock %}

{% block body %}
 {{include('home/menu.html.twig')}}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
             <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}
             </div>
    {% else %}    
            <h1 class="h3 mb-3 font-weight-normal">Login de usuarios</h1>
                 <div>
                    <label for="inputUsername">Nombre:</label>
                    <input type="text" name="username" id="inputUsername" class="form-control" autocomplete="username">
                </div>

                <div>
                    <label for="inputPassword">Contrase√±a:</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password">
               </div>

              <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
                 >

                     {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                              <div class="checkbox mb-3">
                                <label>
                                   <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                              </div>
                     #}
             <div id="botones">
                <button id="boton" class="btn btn-lg btn-primary" type="submit" onClick="{{path("home")}}">Conectarse</button>
             </div>    


    {% endif %}
</form>
{% endblock %}
